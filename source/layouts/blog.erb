<% wrap_layout :layout do %>
  <div class="grid">
    <section class="blog-content">
      <% if current_article %>
        <article class="full-article">
          <%= partial "partials/blog/title" %>
          <div class="body">
            <%= yield %>
          </div>
          <%= partial "partials/blog/article_widgets" %>
        </article>
        <section class="disqus widget">
          <%= disqus %>
        </section>
      <% else %>
        <%= yield %>
      <% end %>
    </section>

    <%= partial "partials/blog/blog_widgets" %>
  </div>
<% end %>
