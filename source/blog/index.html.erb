---
pageable: true
per_page: 5
---

<ul>
  <% page_articles.each do |article| %>
    <article class="preview">
      <h3><%= link_to article.title, article %></h3>
      <ul class="meta">
        <i class="fa fa-calendar"></i> <span class="date"><%= article.date.strftime('%b %e, %Y') %></span>
        <i class="fa fa-tags"></i> <% article.tags.each do |tag| %>
        <li class="tags"><%= link_to tag, tag_path(tag) %></li>
      <% end %>
    </ul>
    <p><%= article.summary %></p>
  </article>
<% end %>
</ul>

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <%= link_to 'Previous page', prev_page %>
  <% end %>

  <% if next_page %>
    <%= link_to 'Next page', next_page %>
  <% end %>
<% end %>

